<div class="container">
  <div class="row no-gutters">
    <div class="col-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <div class="row">
        <div class="mx-auto col=11" style="width: 270px;">
        <h2>新規管理者登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "sales/shared/error_messages", resource: resource %>
          <!--Profileモデルへの保存-->
          <%= f.fields_for :profile do |f| %>
            <div class="field">
              <%= f.label :プロフィール画像 %><br />
              <%= f.attachment_field :profile_image %>
            </div>
            <div class="field">
              <%= f.label :名前 %><br />
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <%= f.label :出身地 %><br />
              <%= f.text_field :birthplace %>
            </div>
            <div class="field">
              <%= f.label :趣味 %><br />
              <%= f.text_field :hobby %>
            </div>
            <div class="field">
              <%= f.label :最近の出来事 %><br />
              <%= f.text_field :recent_event %>
            </div>
            <div class="field">
              <%= f.label :一言 %><br />
              <%= f.text_field :a_word %>
            </div>
            <div class="field">
              <%= f.label :電話番号 %><br />
              <%= f.text_field :phone_number %>
            </div>
          <% end %>

          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <tb>（<%= @minimum_password_length %> 文字以上）</tb>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :パスワード（確認用） %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録" %>
          </div>
        <% end %>
        <%= render "sales/shared/links" %>
      </div>
    </div>
  </div>
  </div>
</div>
