<div class="post-detail py-5 bg-light">
  <div class="card w-75 mx-auto mt-4 shadow-lg">
    <%= attachment_image_tag @post, :post_image, class:"card-img-top"; %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
        </div>
        <div class="col-10">
          <p class="card-title">
              <strong><i class="far fa-flag"></i><span> <%= @post.post_title %></span></strong>
          </p>
          <p class="card-title">説明：<%= @post.introduction %></p>
          <span><i class="fas fa-user"></i> By <%= @sale.name %> ｜ </span>
          <span><i class="fa fa-calendar"></i> <%= @post.created_at.strftime('%Y/%m/%d') %> ｜ </span>
          <span><i class="fa fa-comment"></i> <%= link_to "#{@post.post_comments.count}", sale_post_path(@post.id), class:"text-dark" %> ｜ </span>
          <span><i class="fa fa-heart"></i> <%= @post.favorites.count %></span>
          <% if @post.sale == current_sale %>
            <span> ｜ </span><%= link_to "削除",sale_post_path(@post), class:"text-dark", method: :delete %>
          <% end %>
        </div>
      </div>
      <hr>
      <div class="comments card-text">
        <h4 class="mt-3"><%= @post.post_comments.count %>件コメント</h4>
        <% @post.post_comments.each do |post_comment| %>
          <div class="media border mb-3">
            <% if post_comment.action == 0 %>
              <%= attachment_image_tag @sale, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"bd-placeholder-img align-self-center mx-3" %>
            <% else %>
              <%= image_tag 'user.png', size: '60x60', class:"bd-placeholder-img align-self-center mx-3" %>
            <% end %>
            <div class="post-name my-auto">
              <%= post_user_name(post_comment.post_user_id, post_comment.action) %>
            </div>
            <div class="media-body ml-4 p-3">
              <p><%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %></p>
              <p><%= post_comment.comment %></p>
              <% if post_comment.action == 0 %>
               <%= link_to "削除", sale_post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-danger pull-right" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <hr>
      <div class="new-comment card-text">
        <%= form_with(model:[@post, @post_comment], url: sale_post_post_comments_path(@post.id), local:true) do |f| %>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">コメントする</label>
            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
          </div>
          <%= f.submit "送信する", class:"btn btn-lg btn-info mt-2 float-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
