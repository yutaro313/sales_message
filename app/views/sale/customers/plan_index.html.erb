<div class="container">
  <div class="row">
    <div class="col-4">
      <h5 class="text-dark bg-light p-4 mb-0">新規スケジュール作成</h5>
      <div class="form-body p-4">
        <%= form_with model: @plan, url: sale_customer_plans_path(@customer), local: true do |f| %>
        <div class="input-group mb-3 mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true">タイトル</span>
          </div>
          <%= f.text_field :title %>
        </div>
        <div class="input-group mb-3 mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true">開始日時</span>
          </div>
          <%= f.datetime_select :start_date %>
        </div>
        <div class="input-group mb-3 mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true">終了日時</span>
          </div>
          <%= f.datetime_select :end_date %>
        </div>
        <hr>
        <%= f.submit '新規作成', class:"btn btn-lg btn-block btn-success mt-4" %>
        <% end %>
      </div>
    </div>
    <div class="col-8">
      <h1>スケジュール</h1>

      <table class="table table-sm table-striped">
        <thead>
          <tr>
            <th class="col1">タイトル</th>
            <th class="col1">開始日時</th>
            <th class="col1">終了日時</th>
            <th class="col1">投稿者</th>
          </tr>
        </thead>
        <tbody>
          <% @plans.each do |plan| %>
            <tr>
              <td><%= link_to plan.title, customer_plan_path(plan) %></td>
              <td><%= plan.start_date %></td>
              <td><%= plan.end_date %></td>
              <td><%= plan.owner.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= month_calendar plans: @plans do |date, plans| %>
        <%= date.day %>
          <% plans.each do |plan| %>
          <div>
            <%= link_to plan.title, sale_plan_path(plan) %>
          </div>
          <% end %>
      <% end %>

      <%= link_to 'スケジュール追加', new_sale_plan_path, class:"btn btn-sm btn-outline-secondary" %>
    </div>
  </div>
</div>