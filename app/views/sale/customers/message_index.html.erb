<div class="container">
  <h3>Chat room</h3>
  <div class="message mb-3">
    <% @messages.each do |message| %>
      <div class="upper-message">
        <div class="message-user">
          <!--投稿したユーザー-->
          <% if message.is_from_sale %>
            <%= current_sale.name %>
          <% else %>
            <%= @customer.name %>
          <% end %>
        </div>
        <!--投稿した日時-->
        <%= message.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
      </div>
      <div class="lower-message">
        <div class="message-content">
          <%= message.content %>
        </div>
        <% if message.image.attached? %>
          <%= image_tag message.image, size: '500x500' %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <%= render 'sale/messages/form', messages: @messages %>
  </div>
</div>