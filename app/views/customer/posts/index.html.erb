<div class="card-list-container py-5">
  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to customer_post_path(post.id) do %>
    <!--画像サイズ調整後ほど-->
    <%= attachment_image_tag post, :post_image, class:"card-img-top" %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <div class="col-2">
          <%= attachment_image_tag @profile, :profile_image, fallback:"no-image.jpg", class:"mt-3 rounded-circle ml-4", size: "50x50" %>
          </div>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to customer_post_path(post.id) do %>
            <strong><i class="far fa-flag"></i><span><%= post.post_title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= post.introduction %></p>
          <span><i class="fas fa-user"></i>By <%= link_to @profile.name, customer_profiles_path(@posts) %> |</span>
          <span><%= link_to "#{post.post_comments.count}コメント", customer_post_path(post.id),class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>