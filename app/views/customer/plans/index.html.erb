<h1>スケジュール</h1>

<table class="table table-sm table-striped">
  <thead>
    <tr>
      <th class="col1">タイトル</th>
      <th class="col1">開始日時</th>
      <th class="col1">終了日時</th>
    </tr>
  </thead>
  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.title %></td>
        <td><%= plan.start_date %></td>
        <td><%= plan.end_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= month_calendar plans: @plans do |date, plans| %>
  <%= date %>
  <% plans.each do |plan| %>
    <div>
      <%= plan.title %>
    </div>
  <% end %>
<% end %>

<%= link_to 'スケジュール追加', new_customer_plan_path, class:"btn btn-sm btn-outline-secondary" %>