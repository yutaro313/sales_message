<div class="comments comments_area card-text">
  <h4 class="mt-3"><%= post.post_comments.count %>件コメント</h4>
  <% post.post_comments.each do |post_comment| %>
    <div class="media border mb-3">
       <% if post_comment.action == 1 %>
        <%= image_tag 'user.png', size: '50x50', class:"bd-placeholder-img align-self-center mx-3" %>
      <% else %>
        <%= attachment_image_tag sale, :profile_image, fallback: "no-image.jpg", class:"bd-placeholder-img align-self-center mx-3", size: "50x50" %>
      <% end %>
      <div class="post-name my-auto">
        <% if post_comment.action == 0 %>
          <%= sale.name %>
        <% else %>
          <%= post_customer.name %>
        <% end %>
      </div>
      <div class="media-body ml-4 p-3">
        <p><%= post_comment.created_at.strftime('%Y/%m/%d') %></p>
        <p><%= post_comment.comment %></p>
        <% if post_comment.action == 1 %>
         <%= link_to "削除", customer_post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>