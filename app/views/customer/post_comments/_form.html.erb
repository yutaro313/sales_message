 <div class="new-comment comment_create card-text">
  <%= form_with(model:[post, post_comment], url: customer_post_post_comments_path(post.id)) do |f| %>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">コメントする</label>
      <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
    </div>
    <%= f.submit "送信する", class:"btn btn-lg btn-info mt-2 float-right" %>
  <% end %>
</div>