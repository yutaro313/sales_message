<div class="container">
  <h2 class="mt-4 mb-4 ">ログイン</h2>
  <div class="row mb-3  text-center">
    <div class="h5 col-3 offset-1 bg-light">会員の方はこちらからログイン</div>
  </div>
  <div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mb-3">
      <div class="col-2 offset-2"><%= f.label :メールアドレス %></div>
      <div class="col-6"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>
    <div class="row mb-3">
      <div class="col-2 offset-2"><%= f.label :パスワード %></div>
      <div class="col-6"><%= f.password_field :password, autocomplete: "current-password" %></div>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="row mb-3">
        <div class="col-2 offset-4"><%= f.check_box :remember_me %><%= f.label :パスワードを記憶する %></div>
      </div>
    <% end %>
    <div class="row mb-3">
      <div class="col-2 offset-4"><%= f.submit "ログイン", class: "btn btn-success" %></div>
    </div>
  <% end %>
  </div>
  <div class="row mb-2 text-center">
    <div class="h5 col-3 offset-1 bg-light">会員登録がお済みでない方</div>
  </div>
  <div class="row">
    <div class="col-4 offset-2"><%= render "customers/shared/links" %></div>
  </div>
</div>