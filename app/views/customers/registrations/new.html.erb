<div class="container">
  <h2 class="mt-4 mb-4 ">新規会員登録</h2>
  <div>
  <%= form_with model: resource, as: resource_name, url: registration_path(resource_name),local: true do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
    <div class="row mb-3">
      <div class="col-3 offset-2"><%= f.label :名前 %></div>
      <div class="col-3"><%= f.text_field :name, autofocus: true %></div>
    </div>
    </div>
    <div class="row mb-3">
      <div class="col-3 offset-2"><%= f.label :電話番号 %></div>
      <div class="col-3"><%= f.text_field :phone_number, autofocus: true %></div>
    </div>
    <div class="row mb-3">
      <div class="col-3 offset-2"><%= f.label :メールアドレス %></div>
      <div class="col-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>
    <div class="row mb-3">
      <div class="col-3 offset-2"><%= f.label :相手方の会社名 %></div>
      <div class="col-3"><%= f.text_field :company_name, autofocus: true %></div>
    </div>
    <div class="row mb-3">
      <div class="col-3 offset-2">
        <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      （<%= @minimum_password_length %> 文字以上）
      </div>
      <% end %>
      <div class="col-3"><%= f.password_field :password, autocomplete: "new-password" %></div>
    </div>
    <div class="row mb-3">
      <div class="col-3 offset-2"><%= f.label :パスワード（確認用） %></div>
      <div class="col-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>
    <div class="row mb-3">
      <div class="col-2 offset-5"><%= f.submit "新規登録", class: "btn btn-success" %></div>
    </div>
  <% end %>
    <div class="row mb-2">
      <h2>既に登録済みの方</h2>
    </div>
    <div class="row">
      <div class="col-4 offset-2"><%= render "customers/shared/links" %></div>
    </div>
  </div>
</div>